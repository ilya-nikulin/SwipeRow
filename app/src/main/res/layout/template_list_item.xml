<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ru.simpls.swiperow.SwipedHorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/template_row_height"
        android:scrollbars="none"
        android:id="@+id/templateSample" >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/templateLayout">

            <FrameLayout
                android:layout_width="130dp"
                android:layout_height="fill_parent"
                android:id="@+id/templateLayoutPay"
                android:background="@color/template_color_1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/template_pay_wait"
                    android:id="@+id/templatePayText"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white" />

                <FrameLayout
                    android:layout_width="65dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/payTemplateIndicatorImage"
                        android:layout_gravity="center" />
                </FrameLayout>

            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="360dp"
                android:layout_height="fill_parent"
                android:id="@+id/templateLayoutMainPart"
                android:background="@color/white">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView5"
                    android:background="@color/template_color_1"
                    android:src="@drawable/transfer_to_self_thumb"
                    android:scaleType="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Название шаблона"
                    android:id="@+id/templateName"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/bankproduct_type_text" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:background="#fff2b5b8">

                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton"
                    android:background="@color/bar_button_trash"
                    android:src="@drawable/bar_button_trash"
                    android:scaleType="center" />

            </LinearLayout>

        </LinearLayout>
    </ru.simpls.swiperow.SwipedHorizontalScrollView>

</LinearLayout>